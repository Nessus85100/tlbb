				<orientation>horizontal</orientation>
					<control type="label">
			      <left>0</left>
			      <top>0</top>
		        <width min="10" max="350">auto</width>
						<height>30</height>
						<font>FontSize_20</font>
						<textcolor>99white</textcolor>
						<shadowcolor>55000000</shadowcolor>
						<label>Not Connected</label>
					</control>
