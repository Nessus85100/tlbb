<window id="101">
	<defaultcontrol always="true">10</defaultcontrol>
	<controls>

   <control type="group">
	  <include>DialogAnimation</include>
    <visible>!Window.IsVisible(virtualkeyboard) + !Window.IsVisible(selectdialog) + !Window.IsVisible(DialogSelect.xml) + !Window.IsVisible(yesnodialog) + !Window.IsVisible(okdialog)</visible>
		<control type="image">
			<description>background image</description>
			<include>FullscreenDimensions</include>
			<texture background="true">dialogs/progress/bg_progress.png</texture>
		</control>

		 <control type="group">
	<!-- <posx>774</posx>
	      <posx>558</posx> -->
	      <posx>337</posx>
				<posy>286</posy>
				<animation effect="fade" end="70" condition="true">conditional</animation>
			<control type="image.">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>180</width>
				<height>180</height>
				<texture>dialogs/busy/static_progress.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>140</width>
				<height>140</height>
				<texture>dialogs/busy/animation_1.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="0" end="360" center="auto" time="2500" loop="true" condition="true">conditional</animation>
			</control>
			<control type="image">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>140</width>
				<height>140</height>
				<texture>dialogs/busy/animation_2.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="0" end="-360" center="auto" time="2500" loop="true" condition="true">conditional</animation>
			</control>
			<control type="label">
				<description>Busy label</description>
				<posx>-129</posx>
				<posy>53</posy>
				<width>400</width>
				<height>35</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[System.Progressbar,,%]</label>
				<font>FontSize_14B</font>
				<textcolor>99white</textcolor>
				<visible>IntegerGreaterThan(System.Progressbar,0)</visible>
			</control>
		 </control>		

		<control type="image.">
			<description>background image</description>
			<include>FullscreenDimensions</include>
			<texture background="true">dialogs/progress/text_area.png</texture>
		</control>		
		<control type="label" id="1">
			<description>fake heading label</description>
			<posx>0</posx>
			<posy>0</posy>
			<width>0</width>
			<height>0</height>
			<font>-</font>
			<visible>false</visible>
		</control>
		<control type="label">
			<description>header label</description>
			<posx>340</posx>
			<posy>265</posy>
			<width>600</width>
			<font>FontSize_36</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<aligny>center</aligny>
			<scroll>true</scroll>
			<scrollspeed>20</scrollspeed>
		  <label>$INFO[Control.GetLabel(1)]</label>
		</control>
	
	  <control type="group">
			<posx>340</posx>
			<posy>248</posy>
			<control type="label" id="2">
				<description>dialog line 1</description>
				<posx>133</posx>
				<posy>60</posy>
	 <!-- <width>548</width>
	      <width>470</width> -->
	      <width>445</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
			</control>
			<control type="label" id="3">
				<description>dialog line 2</description>
				<posx>133</posx>
				<posy>85</posy>
	 <!-- <width>548</width>
	      <width>470</width> -->
	      <width>445</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
				<animation effect="slide" start="0,0" end="0,-25" time="0" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
			</control>
			<control type="label" id="4">
				<description>dialog line 3</description>
				<posx>133</posx>
				<posy>110</posy>
	 <!-- <width>548</width>
	      <width>470</width> -->
	      <width>445</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>left</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
				<animation effect="slide" start="0,0" end="0,-25" time="0" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
			</control>
		</control>

		<control type="button" id="10">
			<description>Cancel button</description>
			<posx>575</posx>
			<posy>423</posy>
			<width>150</width>
			<height>40</height>
			<texturenofocus border="10,0,10,0">dialogs/keyboard/button_nf.png</texturenofocus>
			<texturefocus border="10,0,10,0">dialogs/keyboard/button_fo.png</texturefocus>
			<align>center</align>
			<aligny>top</aligny>
			<font>FontSize_22</font>
			<textcolor>99grey</textcolor>
			<focusedcolor>white</focusedcolor>
			<disabledcolor>44white</disabledcolor>
			<shadowcolor>55000000</shadowcolor>
			<textoffsety>4</textoffsety>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>10</onup>
			<ondown>10</ondown>
		</control>
	 </control>
	</controls>
</window>