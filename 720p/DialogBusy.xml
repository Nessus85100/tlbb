<?xml version="1.0" encoding="UTF-8"?>
<window  id="136">
    <zorder>5</zorder>
		<animation type="WindowOpen" reversible="false">
			<effect type="zoom" time="450" center="auto" start="190" end="100" tween="cubic" easing="out" />
			<effect type="fade" time="450" start="0" easing="out" end="100" />
		</animation>			
		<animation type="WindowClose" reversible="false">
			<effect type="zoom" time="450" center="auto" start="100" end="190" tween="cubic" easing="in" />
			<effect type="fade" time="450" start="100" easing="in" end="0" />
		</animation>		  
		<animation type="Visible" reversible="false">
			<effect type="zoom" time="450" center="auto" start="190" end="100" tween="cubic" easing="out" />
			<effect type="fade" time="450" start="0" easing="out" end="100" />
		</animation>			
		<animation type="Hidden" reversible="false">
			<effect type="zoom" time="450" center="auto" start="100" end="190" tween="cubic" easing="in" />
			<effect type="fade" time="450" start="100" easing="in" end="0" />
		</animation>  
		<controls>
		<control type="group">
				<posx>545</posx>
				<posy>245</posy>
			<control type="image">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>220</width>
				<height>220</height>
				<texture>dialogs/busy/static_busy.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>220</width>
				<height>220</height>
				<texture>dialogs/busy/animation_1.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="0" end="360" center="auto" time="1500" loop="true" condition="true">conditional</animation>
			</control>
			<control type="image">
				<description>Busy animation</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>220</width>
				<height>220</height>
				<texture>dialogs/busy/animation_2.png</texture>
				<aspectratio>keep</aspectratio>
				<animation effect="rotate" start="0" end="-360" center="auto" time="1500" loop="true" condition="true">conditional</animation>
			</control>
			<control type="label">
				<description>Busy label</description>
				<posx>-90</posx>
				<posy>90</posy>
				<width>400</width>
				<height>35</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[Control.GetLabel(10),,%]</label>
				<font>FontSize_26</font>
				<textcolor>99white</textcolor>
				<!-- <textcolor>FF9E64BD</textcolor> -->
				<visible>IntegerGreaterThan(Control.GetLabel(10),0)</visible>
			</control>
			<control type="progress" id="10">
				<description>progress control</description>
				<texturebg>-</texturebg>
				<lefttexture>-</lefttexture>
				<midtexture>-</midtexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
				<visible>false</visible>
			</control>
		</control>		


	</controls>
</window>