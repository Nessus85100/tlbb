<window id="2002">
	<defaultcontrol always="true">10</defaultcontrol>
  <zorder>5</zorder>
	<controls>

   <control type="group">
	  <include>DialogAnimation</include>
		<control type="image">
			<description>background image</description>
			<include>FullscreenDimensions</include>
			<texture background="true">dialogs/other/bg_ok.png</texture>
		</control>
		<control type="label" id="1">
			<description>header label</description>
			<posx>340</posx>
			<posy>265</posy>
			<width>600</width>
			<font>FontSize_36</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<aligny>center</aligny>
			<scroll>true</scroll>
			<scrollspeed>20</scrollspeed>
		  <label>-</label>
		</control>
	
	   <control type="group">
			<posx>370</posx>
			<posy>250</posy>
			<control type="label" id="2">
				<description>dialog line 1</description>
				<posx>0</posx>
				<posy>60</posy>
        <width>550</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
			</control>
			<control type="label" id="3">
				<description>dialog line 2</description>
				<posx>0</posx>
				<posy>85</posy>
        <width>550</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
				<animation effect="slide" start="0,0" end="0,-25" time="0" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
			</control>
			<control type="label" id="4">
				<description>dialog line 3</description>
				<posx>0</posx>
				<posy>110</posy>
        <width>550</width>
				<height>40</height>
				<textcolor>99white</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<label>-</label>
				<haspath>true</haspath>
				<font>FontSize_20</font>
				<animation effect="slide" start="0,0" end="0,-25" time="0" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
			</control>
		 </control>

			<control type="button" id="10">
				<description>OK button</description>
				<posx>575</posx>
				<posy>423</posy>
				<width>150</width>
				<height>40</height>
				<texturenofocus border="10,0,10,0">dialogs/keyboard/button_nf.png</texturenofocus>
				<texturefocus border="10,0,10,0">dialogs/keyboard/button_fo.png</texturefocus>
				<align>center</align>
				<aligny>top</aligny>
				<font>FontSize_22</font>
				<textcolor>99grey</textcolor>
				<focusedcolor>white</focusedcolor>
				<disabledcolor>44white</disabledcolor>
				<shadowcolor>55000000</shadowcolor>
				<textoffsety>4</textoffsety>
				<onleft>10</onleft>
				<onright>10</onright>
				<onup>10</onup>
				<ondown>10</ondown>
			</control>
			
			
	 </control>


	</controls>
</window>