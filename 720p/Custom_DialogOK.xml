<?xml version="1.0" encoding="UTF-8"?>
<window  type="dialog" id="1110">
	<defaultcontrol always="true">10</defaultcontrol>
  <onunload condition="!IsEmpty(Window(Home).Property(SwitchMode))">ClearProperty(SwitchMode)</onunload>
  <zorder>5</zorder>
	<controls>
   <control type="group">
		<left>310</left>
		<top>235</top>
	  <include>DialogAnimation</include>
    <visible>!Window.IsVisible(yesnodialog) + !Window.IsVisible(okdialog)</visible>
	  <control type="image">
		  <left>0</left>
		  <top>0</top>
		  <width>660</width>
		  <height>57</height>
		  <colordiffuse>blue</colordiffuse>
		  <texture background="true" border="9">dialogs/other/header.png</texture>
	  </control>
	  <control type="image">
		  <left>0</left>
		  <top>55</top>
		  <width>660</width>
		  <height>188</height>
		  <texture background="true" border="39,19,39,19">dialogs/other/body.png</texture>
	  </control>
		 <control type="image">
			<left>2</left>
			<top>53</top>
			<width>656</width>
			<height>4</height>
			<aspectratio>stretch</aspectratio>
			<texture background="true">dialogs/other/header_line.png</texture>
		 </control>
    <control type="label">
      <description>header label</description>
      <left>15</left>
      <top>12</top>
      <width>630</width>
	    <include>DialogsHeaderLabel</include>
		  <label>$VAR[CustomDialogOKHeadLabel]</label>
    </control>
		<control type="textbox">
		  <left>15</left>
			<top>65</top>
      <width>630</width>
			<height>90</height>
		  <align>left</align>
			<font>FontSize_22</font>
			<textcolor>99white</textcolor>
			<shadowcolor>99000000</shadowcolor>
			<autoscroll time="3000" delay="3000" repeat="5000">true</autoscroll>
	    <label>$VAR[CustomDialogOKMessage]</label>
		</control>
		 <control type="button." id="11">
			<description>Cancel button</description>
			<left>315</left>
			<top>180</top>
	    <include>DialogsButtonsYesNo</include>
		  <label>222</label>
		  <onclick>Action(Close)</onclick>
	    <onclick condition="Window.IsActive(Weather)">ReplaceWindow(Home)</onclick>
			<onleft>10</onleft>
			<onright>10</onright>
			<onup>10</onup>
			<ondown>10</ondown>
		 </control>		
		 <control type="button" id="10">
			<description>OK button</description>
			<left>485</left>
			<top>180</top>
	    <include>DialogsButtonsYesNo</include>
			<label>186</label>
		  <onclick>Action(Close)</onclick>
			<onclick condition="!IntegerGreaterThan(Container(450).NumItems,0)">Dialog.Close(favourites)</onclick>
			<onback condition="!IntegerGreaterThan(Container(450).NumItems,0)">Dialog.Close(favourites)</onback>
	    <onclick condition="Window.IsActive(Weather)">ReplaceWindow(WeatherSettings)</onclick>
			<onleft>11</onleft>
			<onright>11</onright>
			<onup>11</onup>
			<ondown>11</ondown>
		 </control>
	 </control>
	</controls>
</window>