   <!-- ================ -->
   <!-- Top Content Info -->
   <!-- ================ -->		
	 <control type="group">
			<posx>45</posx>
			<posy>25</posy>
			<visible>!ControlGroup(9000).HasFocus + !Window.IsActive(ContextMenu) + !Window.IsActive(ShutdownMenu) + !Window.IsActive(AddonInformation)</visible>
		  <include>CommonSlideAnimations</include>
			<control type="grouplist">
				<posx>0</posx>
				<posy>0</posy>
				<width>1000</width>
				<align>left</align>
				<itemgap>20</itemgap>
				<orientation>horizontal</orientation>
		    <include>CommonSlideAnimations</include>				
				<control type="label">
				  <include>TopBigLabel</include>
				  <label>$LOCALIZE[24001]</label>
				</control>
				<control type="label">
				  <include>TopZoomedSmallLabel</include>
				  <label>$INFO[Container.Property(RepoName)]</label>
			    <visible>!IsEmpty(Container.Property(RepoName))</visible>
				</control>
				<control type="label">
				  <include>TopZoomedSmallLabel</include>
				  <label>$INFO[Container.Property(AddonCategory)]</label>
			    <visible>!IsEmpty(Container.Property(AddonCategory))</visible>
				</control>
			</control>
	 </control>

	</controls>
</window>
