		<control type="grouplist" id="9222">
			<posx>0</posx>
			<posy>63</posy>
			<width>380</width>
			<height>520</height>
			<itemgap>0</itemgap>
			<onleft>9111</onleft>
			<onright>9111</onright>
			<onup>9222</onup>
			<ondown>9222</ondown>
