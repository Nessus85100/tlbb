			<description>profile image</description>
			<posx>364</posx>
			<posy>229</posy>
			<width>148</width>
			<height>148</height>
			<align>left</align>
			<aspectratio>stretch</aspectratio>
			<texture fallback="dialogs/profiles/unknown_user.png">$INFO[System.ProfileThumb]</texture>
		</control>
		<control type="label.">
			<description>profile name label</description>
			<posx>525</posx>
			<posy>248</posy>
			<width>330</width>
			<align>left</align>
			<font>FontSize_18</font>
			<textcolor>blue</textcolor>
			<label>$LOCALIZE[20093]</label>
		</control>
		<control type="label" id="1000">
			<description>profile name Value</description>
			<posx>525</posx>
			<posy>309</posy>
			<width>330</width>
			<align>left</align>
			<font>FontSize_38</font>
			<textcolor>white</textcolor>
		</control>
		<control type="label" id="1001">
			<description>profile directory Value</description>
			<posx>525</posx>
			<posy>344</posy>
			<width>330</width>
			<align>left</align>
			<font>FontSize_18</font>
			<textcolor>blue</textcolor>
		</control>		

	  <control type="group"  id="10000">
			<posx>365</posx>
			<posy>525</posy>
      <!-- Buttons -->
			<control type="grouplist" id="10001">
				<posx>0</posx>
				<posy>0</posy>
				<width>0</width>
				<height>0</height>
				<itemgap>0</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<onleft>10001</onleft>
				<onright>10001</onright>
				<onup>5</onup>
				<ondown>5</ondown>
				<control type="button" id="28">
					<description>Button</description>
				  <label>190</label>
				  <include>TopButton</include>
				</control>
				<control type="button" id="29">
					<description>Button</description>
				  <label>222</label>
				  <include>TopButton</include>
				</control>
			</control>
      <!-- Buttons Labels -->
			<control type="grouplist">
				<posx>0</posx>
				<posy>0</posy>
				<height>70</height>
				<width>552</width>
				<itemgap>15</itemgap>
				<align>left</align>
				<orientation>horizontal</orientation>
				<control type="label">
					<description>Button Label</description>
					<height>62</height>
					<width min="10" max="552">auto</width>
					<font>FontSize_20</font>
					<textcolor>white</textcolor>
					<shadowcolor>99000000</shadowcolor>
			    <align>left</align>
			    <aligny>center</aligny>
					<scroll>false</scroll>
          <label>$INFO[Control.GetLabel(28),․  ]</label>
