<window id="130">
	<defaultcontrol>5</defaultcontrol>
  <backgroundcolor>0</backgroundcolor>
	<controls>
	
	 <control type="group">
		<include>DialogAnimation</include>
		<visible>!Window.IsActive(virtualkeyboard) + !Window.IsActive(numericinput) + !Window.IsActive(LockSettings) + !Window.IsActive(yesnodialog) + !Window.IsActive(filebrowser)</visible>
		<control type="image">
			<description>background image</description>
			<include>FullscreenDimensions</include>
			<texture>dialogs/profiles/bg_profilesettings.png</texture>
		</control>
		<control type="label">
			<description>Head Label</description>
			<posx>340</posx>
			<posy>185</posy>
			<width>600</width>
			<font>FontSize_36</font>
			<textcolor>white</textcolor>
			<align>center</align>
			<scroll>true</scroll>
			<scrollspeed>20</scrollspeed>
			<label>20067</label>
		</control>
		<control type="grouplist" id="5">
			<description>Control Area</description>
			<posx>364</posx>
			<posy>381</posy>
			<width>552</width>
			<height>149</height>
			<itemgap>4</itemgap>
			<onleft>10000</onleft>
			<onright>10000</onright>
			<onup>5</onup>
			<ondown>5</ondown>
		</control>
		<control type="button" id="7">
			<description>Default Button</description>
	    <include>DialogsButton</include>
		</control>
		<control type="radiobutton" id="8">
			<description>Default RadioButton</description>
	    <include>DialogsRadioButton</include>
		</control>
		<control type="spincontrolex" id="9">
